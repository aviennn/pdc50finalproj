<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentRecordPDC50.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Label Text="Login"
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Center" />

            <Label Text="Username/ID Number" />
            <Entry x:Name="UsernameEntry" Placeholder="Enter username or ID number" />

            <Label Text="Password" />
            <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" />

            <Button Text="Login" Clicked="OnLoginClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
